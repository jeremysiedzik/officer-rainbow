<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Notifications"
    android:background="@color/blanketBackground"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/probation_contact"
        android:textSize="26sp"
        android:textIsSelectable="true"
        android:textColor="#000000"
        android:id="@+id/text_message_header"
        android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/my_toolbar" />

        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next"
        android:id="@+id/buttonlast"
        android:clickable="false"
        android:textSize="50sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#000000"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_alignParentTop="true" />

        <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/sms_contact3"
        android:labelFor="@id/sms_contact3"
        android:textSize="24sp"
        android:selectAllOnFocus="true"
            android:layout_below="@+id/textView8"
            android:layout_alignParentStart="true" />

        <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contact_button"
        android:id="@+id/buttoncontact3"
            android:layout_below="@+id/editText12"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/etPhoneNumber"
            android:labelFor="@id/etPhoneNumber"
            android:textSize="24sp"
            android:selectAllOnFocus="true"
            android:layout_below="@+id/textView9"
            android:layout_alignParentStart="true"
            android:inputType="phone"
            android:maxLength="12"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:minLines="6"
            android:gravity="top|left"
            android:maxLines="10"
            android:ems="10"
            android:id="@+id/editText12"
            android:labelFor="@id/editText12"
            android:textSize="24sp"
            android:selectAllOnFocus="true"
            android:layout_below="@+id/textView10"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:textSize="26sp"
            android:textIsSelectable="true"
            android:textColor="#000000"
            android:id="@+id/textView8"
            android:layout_below="@+id/text_message_header"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phone_number"
            android:textSize="26sp"
            android:textIsSelectable="true"
            android:textColor="#000000"
            android:id="@+id/textView9"
            android:layout_below="@+id/sms_contact3"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/note"
            android:textSize="26sp"
            android:textIsSelectable="true"
            android:textColor="#000000"
            android:id="@+id/textView10"
            android:layout_below="@+id/etPhoneNumber"
            android:layout_alignParentStart="true" />

    </RelativeLayout>


</ScrollView>